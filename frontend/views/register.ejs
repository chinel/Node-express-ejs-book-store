<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title><%= pageTitle %></title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
    <!-- Google fonts-->
    <link
      href="https://fonts.googleapis.com/css?family=Varela+Round"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Navigation-->
    <%- include('includes/nav') %>

    <!-- Signup-->
    <section class="signup-section" id="signup">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5">
          <div class="col-md-10 col-lg-6 mx-auto text-center">
            <i class="far fa-paper-plane fa-2x mb-2 text-white"></i>
            <h2 class="text-white mb-5">Register</h2>
            <% if (typeof(message) !== "undefined") { %>
            <div class="alert alert-danger me-4"><%= message %></div>
            <% } %>
            <form
              class="form-signup"
              id="contactForm"
              action="register"
              method="POST"
            >
              <div class="row input-group-newsletter gap-4">
                <div class="row">
                  <input class="form-control" id="firstName" type="text"
                  placeholder="Enter First Name..." aria-label="Enter First
                  Name..." name="firstName" <% if(typeof(body) !== "undefined")
                  {%> value="<%= body.firstName%>" <%}%> /> <% if(typeof(errors)
                  !== "undefined"){ %>
                  <p class="text-start text-red fw-semibold mb-0">
                    <%= errors.firstNameMsg %>
                  </p>
                  <% } %>
                </div>
                <div class="row">
                  <input class="form-control" id="lastName" type="text"
                  placeholder="Enter Last Name..." aria-label="Enter Last
                  Name..." name="lastName" <% if(typeof(body) !== "undefined")
                  {%> value="<%= body.lastName%>" <%}%> /> <% if(typeof(errors)
                  !== "undefined"){ %>
                  <p class="text-start text-red fw-semibold mb-0">
                    <%= errors.lastNameMsg %>
                  </p>
                  <% } %>
                </div>

                <div class="row">
                  <input class="form-control" id="address" type="text"
                  placeholder="Enter address..." aria-label="Enter address..."
                  name="address" <% if(typeof(body) !== "undefined") {%>
                  value="<%= body.address%>" <%}%> /> <% if(typeof(errors) !==
                  "undefined"){ %>
                  <p class="text-start text-red fw-semibold mb-0">
                    <%= errors.addressMsg %>
                  </p>
                  <% } %>
                </div>
                <div class="row">
                  <input class="form-control" id="city" type="text"
                  placeholder="Enter city..." aria-label="Enter city..."
                  name="city" <% if(typeof(body) !== "undefined") {%> value="<%=
                  body.city%>" <%}%> /> <% if(typeof(errors) !== "undefined"){
                  %>
                  <p class="text-start text-red fw-semibold mb-0">
                    <%= errors.cityMsg %>
                  </p>
                  <% } %>
                </div>
                <div class="row">
                  <input class="form-control" id="state" type="text"
                  placeholder="Enter state..." aria-label="Enter state..."
                  name="state" <% if(typeof(body) !== "undefined") {%>
                  value="<%= body.state%>" <%}%> /> <% if(typeof(errors) !==
                  "undefined"){ %>
                  <p class="text-start text-red fw-semibold mb-0">
                    <%= errors.stateMsg %>
                  </p>
                  <% } %>
                </div>
                <div class="row">
                  <input class="form-control" id="zipCode" type="text"
                  placeholder="Enter zip code..." aria-label="Enter zip code..."
                  name="zipCode" <% if(typeof(body) !== "undefined") {%>
                  value="<%= body.zipCode%>" <%}%> /> <% if(typeof(errors) !==
                  "undefined"){ %>
                  <p class="text-start text-red fw-semibold mb-0">
                    <%= errors.zipCodeMsg %>
                  </p>
                  <% } %>
                </div>
                <div class="row">
                  <input class="form-control" id="emailAddress" type="email"
                  placeholder="Enter email address..." aria-label="Enter email
                  address..." name="email" <% if(typeof(body) !== "undefined")
                  {%> value="<%= body.email%>" <%}%> /> <% if(typeof(errors) !==
                  "undefined"){ %>
                  <p class="text-start text-red fw-semibold mb-0">
                    <%= errors.emailMsg %>
                  </p>
                  <% } %>
                </div>
                <div class="row">
                  <input class="form-control" id="password" type="password"
                  placeholder="Enter Password..." aria-label="Enter Password..."
                  name="password" <% if(typeof(body) !== "undefined") {%>
                  value="<%= body.password%>" <%}%> /> <% if(typeof(errors) !==
                  "undefined"){ %>
                  <p class="text-start text-red fw-semibold mb-0">
                    <%= errors.passwordMsg %>
                  </p>
                  <% } %>
                </div>

                <div class="row">
                  <input class="form-control" id="confirmPassword"
                  type="password" placeholder="Confirm Password..."
                  aria-label="Confirm Password..." name="confirmPassword" <%
                  if(typeof(body) !== "undefined") {%> value="<%=
                  body.confirmPassword%>" <%}%> /> <% if(typeof(errors) !==
                  "undefined"){ %>
                  <p class="text-start text-red fw-semibold mb-0">
                    <%= errors.confirmPasswordMsg %>
                  </p>
                  <% } %>
                </div>

                <div class="row">
                  <button
                    class="btn btn-primary"
                    id="submitButton"
                    type="submit"
                    name="register-btn"
                  >
                    Register
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer-->
    <%- include('includes/footer') %>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
  </body>
</html>
